<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="96dp"
        android:layout_below="@id/my_profile_toolbar"
        android:layout_height="96dp"
        android:src="@drawable/defaultprofile"
        android:layout_marginLeft="150dp"
        android:id="@+id/my_profile_picture"
        android:layout_marginTop="45dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/my_profile_picture"
        android:layout_marginTop="10dp"
        android:id="@+id/my_profile_name"
        android:hint="Your Name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_profile_name"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="5dp"
        android:drawableEnd="@drawable/star_rating"
        android:text="0.00"
        android:id="@+id/my_profile_rate"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_profile_rate"
        android:textAlignment="center"
        android:text="+91 9394803679"
        android:id="@+id/my_profile_phone"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_profile_phone"
        android:id="@+id/my_profile_email"
        android:text="lorenipsum@gmail.com"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_profile_email"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:text="Room no:404, loren ipsum complex, kochi, kerala"
        />



</RelativeLayout>